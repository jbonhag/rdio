#!/bin/bash

URL=http://localhost:5000

play() {
  curl $URL --data "command=play&key=$1"
}

queue() {
  echo "queue"
  echo "$1"
  curl $URL --data "command=queue&query=$1"
}

search() {
  curl $URL --data "command=search&query=$1"
}

stop() {
  echo "stop"
  curl $URL --data "command=stop";
}

case $1 in
  "play") play "$2"
  ;;
  "queue") queue "$2"
  ;;
  "search") search "$2"
  ;;
  "stop") stop
  ;;
esac
